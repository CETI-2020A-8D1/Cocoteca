@model IEnumerable<Cocoteca.Models.User>

@{
    ViewData["Title"] = "ListaUsuarios";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@using Cocoteca.Models;


<h1>ListaUsuarios</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.nombre)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.apellido)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in ViewBag.User)
        {
            <tr>
                <td>
                    <p>@item.nombre</p> @*@Html.DisplayFor(modelItem => item.nombre)*@
                </td>
                <td>
                    <p>@item.apellido</p>@*@Html.DisplayFor(modelItem => item.apellido)*@
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.idusuario">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.idusuario">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.idusuario">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
